                    <small>{{stat.name}}</small>
                  </td>
                  {{/each}}
                </tr>
              </tbody>
            </table>
          </td>
        </tr> --}}
      </tbody>
    </table>
  </div>

  <div width="75%">
    <b class="fs-1">
      {{ bPokemon.name }}
      {{#each bPokemon.types}}
      <b style="float: right;">{{ type.name }}</b>
      {{/each}}
      <b>(PÃ³kemon)</b>

    </b>
    <hr>

    <b class="fs-4">Peso: {{ bPokemon.weight }} <br>
      <b class="fs-4">Experiencia base: {{ bPokemon.base_experience }} </b><br>
      <b class="fs-4">Altura: {{ bPokemon.height }} </b>
    </b>
    <hr>
    <h1>Estadisticas</h1>
    {{#each bPokemon.stats}}
    <b> ->{{stat.name}}: <i>{{base_stat}}</i></b>
    <br>

    {{/each}}
  </div>

</div>